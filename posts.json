---

---
posts_json = [
		{% assign index = 0 %} {% assign tempindex = 0 %}

    {%- for post in site.posts -%}

			{%- capture index -%}
				{{ tempindex | plus: forloop.index}}
			{%- endcapture -%}

    	{%- include post.json -%},
    {%- endfor -%}

    {%- assign tempindex = index -%}

    {%- for post in site.html_pages -%}

			{%- capture index -%}
				{{ tempindex | plus: forloop.index}}
			{%- endcapture -%}

    	{%- include post.json -%}{% unless forloop.last %},{% endunless %}
    {%- endfor -%}
]